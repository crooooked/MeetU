<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottom_container"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <Button
            android:id="@+id/btn_select_camera"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ffffff"
            android:text="拍照"

            android:textSize="20sp"
            app:layout_constraintVertical_weight="10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/view_4"
            />

        <View
            android:id="@+id/view_4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorGreyForRepostBackground"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/btn_select_camera"
            app:layout_constraintBottom_toTopOf="@+id/tv_select_photo" />

        <Button
            android:id="@+id/tv_select_photo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ffffff"
            android:text="相册"
            android:textSize="20sp"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_4"
            app:layout_constraintVertical_weight="10" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
